<div class="page-header">
	<h1>Login</h1>
	<div class="alert alert-info">
		<form {{action 'login' on="submit"}}>
			{{input type="email" value=email placeholder="user email"}}<br>
			{{input type="password" value=password placeholder="password"}}<br>
			{{input type="submit" value="Login" class="btn"}}
		</form>
		<br>Or<br><br>
		<button {{action 'authenticateWithFacebook'}} class="btn btn-facebook"><i class="fa fa-facebook"></i> | Login with Facebook</button>
	</div>
</div>
